<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:id="@+id/userforget"
        android:hint="Tên đăng nhập"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_30sdp"
        android:textColorHint="#000"
        android:layout_above="@id/result_user"
        android:layout_marginBottom="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/result_user"
        android:layout_centerInParent="true"
        android:textColor="#F81100"
        android:textSize="@dimen/_14sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/request_pw"
        android:layout_centerHorizontal="true"
        android:text="Quên mật khẩu"
        android:paddingRight="@dimen/_15sdp"
        android:paddingLeft="@dimen/_15sdp"
        android:textColor="#fff"
        android:background="@drawable/shqpe_custom_btn_register"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_below="@id/result_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>